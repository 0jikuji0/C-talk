<?xml version="1.0" encoding="UTF-8"?>
<!-- menu.xml - Définition des menus -->
<interface>
  <requires lib="gtk" version="4.0"/>
  
  <!-- Menu principal qui apparaît dans le bouton hamburger -->
  <menu id="primary_menu">
    <!-- Section Fichier -->
    <section>
      <item>
        <attribute name="label" translatable="yes">_Nouveau</attribute>
        <attribute name="action">app.new</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Ouvrir</attribute>
        <attribute name="action">app.open</attribute>
      </item>
      <submenu>
        <attribute name="label" translatable="yes">Fichiers _récents</attribute>
        <section>
          <item>
            <attribute name="label">Document1.txt</attribute>
            <attribute name="action">app.recent1</attribute>
          </item>
          <item>
            <attribute name="label">Document2.txt</attribute>
            <attribute name="action">app.recent2</attribute>
          </item>
        </section>
      </submenu>
    </section>
    
    <!-- Section Édition -->
    <section>
      <item>
        <attribute name="label" translatable="yes">_Préférences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
    </section>
    
    <!-- Section Affichage -->
    <section>
      <item>
        <attribute name="label" translatable="yes">Mode _sombre</attribute>
        <attribute name="action">app.dark-mode</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Plein _écran</attribute>
        <attribute name="action">app.fullscreen</attribute>
      </item>
    </section>
    
    <!-- Section Aide -->
    <section>
      <item>
        <attribute name="label" translatable="yes">_Aide</attribute>
        <attribute name="action">app.help</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">À _propos</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
    
    <!-- Section Quitter -->
    <section>
      <item>
        <attribute name="label" translatable="yes">_Quitter</attribute>
        <attribute name="action">app.quit</attribute>
      </item>
    </section>
  </menu>
  
  <!-- Barre de menu classique (pour les systèmes qui l'utilisent) -->
  <menu id="menubar">
    <!-- Menu Fichier -->
    <submenu>
      <attribute name="label" translatable="yes">_Fichier</attribute>
      <section>
        <item>
          <attribute name="label" translatable="yes">_Nouveau</attribute>
          <attribute name="action">app.new</attribute>
        </item>
        <item>
          <attribute name="label" translatable="yes">_Ouvrir</attribute>
          <attribute name="action">app.open</attribute>
        </item>
        <item>
          <attribute name="label" translatable="yes">_Enregistrer</attribute>
          <attribute name="action">app.save</attribute>
        </item>
      </section>
      <section>
        <item>
          <attribute name="label" translatable="yes">_Quitter</attribute>
          <attribute name="action">app.quit</attribute>
        </item>
      </section>
    </submenu>
    
    <!-- Menu Édition -->
    <submenu>
      <attribute name="label" translatable="yes">_Édition</attribute>
      <section>
        <item>
          <attribute name="label" translatable="yes">_Annuler</attribute>
          <attribute name="action">app.undo</attribute>
        </item>
        <item>
          <attribute name="label" translatable="yes">_Rétablir</attribute>
          <attribute name="action">app.redo</attribute>
        </item>
      </section>
      <section>
        <item>
          <attribute name="label" translatable="yes">_Préférences</attribute>
          <attribute name="action">app.preferences</attribute>
        </item>
      </section>
    </submenu>
    
    <!-- Menu Affichage -->
    <submenu>
      <attribute name="label" translatable="yes">_Affichage</attribute>
      <section>
        <item>
          <attribute name="label" translatable="yes">Mode _sombre</attribute>
          <attribute name="action">app.dark-mode</attribute>
        </item>
        <item>
          <attribute name="label" translatable="yes">Plein _écran</attribute>
          <attribute name="action">app.fullscreen</attribute>
        </item>
      </section>
    </submenu>
    
    <!-- Menu Aide -->
    <submenu>
      <attribute name="label" translatable="yes">_Aide</attribute>
      <section>
        <item>
          <attribute name="label" translatable="yes">_Documentation</attribute>
          <attribute name="action">app.help</attribute>
        </item>
        <item>
          <attribute name="label" translatable="yes">À _propos</attribute>
          <attribute name="action">app.about</attribute>
        </item>
      </section>
    </submenu>
  </menu>
</interface>